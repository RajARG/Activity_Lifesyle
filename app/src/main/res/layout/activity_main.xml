<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/options"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/clickButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clickButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"

        android:text="@string/click_button"
        android:textColor="@android:color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/options"
        />

    <TextView
        android:id="@+id/onCreateCtr"
        android:text="@string/standard"
        android:textSize="20sp"
        android:textColor="#318214"
        android:textStyle="bold"
        android:background="@android:color/black"

        android:layout_width="80dip"
        android:layout_height="40dip"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/onStartCtr"
        android:text="@string/standard"
        android:textSize="20sp"
        android:textColor="#318214"
        android:textStyle="bold"
        android:background="@android:color/black"

        android:layout_width="80dip"
        android:layout_height="40dip"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/onResumeCtr"
        android:text="@string/standard"
        android:textSize="20sp"
        android:textColor="#318214"
        android:textStyle="bold"
        android:background="@android:color/black"

        android:layout_width="80dip"
        android:layout_height="40dip"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/onPauseCtr"
        android:text="@string/standard"
        android:textSize="20sp"
        android:textColor="#318214"
        android:textStyle="bold"
        android:background="@android:color/black"

        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_marginTop="80dp"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@id/onCreateCtr"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/onStopCtr"
        android:text="@string/standard"
        android:textSize="20sp"
        android:textColor="#318214"
        android:textStyle="bold"
        android:background="@android:color/black"

        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_marginTop="80dp"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@id/onStartCtr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/onRestartCtr"
        android:text="@string/standard"
        android:textSize="20sp"
        android:textColor="#318214"
        android:textStyle="bold"
        android:background="@android:color/black"

        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_marginTop="80dp"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@id/onResumeCtr"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/onDestroyCtr"
        android:text="@string/standard"
        android:textSize="20sp"
        android:textColor="#318214"
        android:textStyle="bold"
        android:background="@android:color/black"

        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_marginTop="80dp"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@id/onStopCtr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>